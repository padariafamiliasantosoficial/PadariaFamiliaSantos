RewriteEngine On

# Redireciona query strings antigas para URL limpa
RewriteCond %{QUERY_STRING} ^tipo=([A-Za-zÃã]+)$
RewriteRule ^Produtos$ /%1 [R=301,L]

# Redireciona paths antigas para URL limpa
RewriteRule ^Produtos/([A-Za-zÃã]+)$ /$1 [R=301,L]

# Redireciona /Produtos sem tipo para /Menu
RewriteRule ^Produtos$ /Menu [R=301,L]

# Rewrite interno: /Categoria -> /Produtos.html
RewriteRule ^(Menu|Bolos|Sobremesas|Paes|Pães|Salgados)$ /Produtos.html [L]

# Outras regras existentes (Home, .html implícito, produtos)
RewriteRule ^index$ /Home [R=301,L]
RewriteRule ^Home$ index.html [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

RewriteRule ^produto/([a-z0-9-]+)$ /Produtos.html [L]
