server {
  listen 80;
  root /app;  # Diretório raiz dos seus arquivos (ajuste se for /app/public ou similar)

  index index.php index.html;

  # Roteamento: tenta o arquivo direto, depois diretório, depois cai no index.php
  location / {
    try_files $uri $uri/ /index.php?$query_string;
  }

  # Processamento de PHP
  location ~ \.php$ {
    fastcgi_pass 127.0.0.1:9000;  # Porta padrão do PHP-FPM no Render
    fastcgi_index index.php;
    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    include fastcgi_params;
  }

  # Otimização para arquivos estáticos (CSS, JS, imagens)
  location ~* \.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$ {
    expires max;
    log_not_found off;
  }
}
